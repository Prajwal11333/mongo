<header class="site-header">
    <div class="container">
        <div class="header-content">
            <div class="logo">
                <a href="/" id="logo-link">
                    <img src="/assets/imgs/logo.jpg" alt="EduSign" class="logo-img">
                    <span class="logo-text">EduSign</span>
                </a>
            </div>

            <nav class="main-nav" id="main-navigation">
                <ul class="nav-list">
                    <li class="nav-item"><a href="/" class="nav-link" id="nav-home">Home</a></li>
                    <li class="nav-item"><a href="/tutorials" class="nav-link" id="nav-tutorials">Tutorials</a></li>
                    <li class="nav-item"><a href="/translate" class="nav-link" id="nav-translator">Translator</a></li>
                    <!-- <li class="nav-item"><a href="/numbers-letters" class="nav-link" id="nav-numbers-letters">Numbers & Letters</a></li> -->
                    <li class="nav-item"><a href="/about" class="nav-link" id="nav-resources">About-Us</a></li>
                    <li class="nav-item"><a href="/community" class="nav-link" id="nav-resources">Community</a></li>
